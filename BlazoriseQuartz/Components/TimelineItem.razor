@inherits BaseComponent

<div @attributes="Attributes" class="@ClassNames" style="@Style" @onclick="Select">
    <div class="timeline-item-content">
        @if (ChildContent is not null)
        {
            @ChildContent
        }
        else if (ItemContent != null)
        {
            @ItemContent
        }
    </div>
    <div class="timeline-item-divider">
        @if (!HideDot)
        {
            <div class="@DotClassNames">
                <div class="@DotInnerClassNames" style="@DotStyle">
                    @if (ItemDot is not null)
                    {
                        @ItemDot
                    }
                </div>
            </div>
        }
    </div>
    @if (ItemOpposite is not null)
    {
        <div class="timeline-item-opposite">
            @ItemOpposite
        </div>
    }
</div>